<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-huawei-switchapn" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
	<name>HuaWeiSwitchApnPlugin</name>
	<js-module name="HuaWeiSwitchApnPlugin" src="www/HuaWeiSwitchApnPlugin.js">
		<clobbers target="cordova.plugins.HuaWeiSwitchApnPlugin" />
	</js-module>
	<platform name="android">
		<config-file parent="/*" target="res/xml/config.xml">
			<feature name="HuaWeiSwitchApnPlugin">
				<param name="android-package" value="cordova.plugin.huaweiswitchapn" />
			</feature>
			
			<uses-permission android:name="com.huawei.permission.sec.MDM" />
    			<uses-permission android:name="com.huawei.permission.sec.MDM_APN" />
		</config-file>		
		<config-file parent="/*" target="AndroidManifest.xml">
			<activity android:name=".LicenseActivity"></activity>
			<receiver android:label="@string/app_name" android:name=".SampleDeviceReceiver" android:permission="android.permission.BIND_DEVICE_ADMIN">
			    <meta-data android:name="android.app.device_admin" android:resource="@xml/device_admin" />
			    <intent-filter>
				<action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
			    </intent-filter>
			</receiver>
		</config-file>
		<source-file src="src/android/HuaWeiSwitchApnPlugin.java" target-dir="src/cordova.plugin.huaweiswitchapn" />
		<source-file src="src/android/com/huawei/mdm/sample/LicenseActivity.java" target-dir="src/cordova.plugin.huaweiswitchapn" />
		<source-file src="src/android/com/huawei/mdm/sample/SampleDeviceReceiver.java" target-dir="src/cordova.plugin.huaweiswitchapn" />
		<source-file src="src/android/com/huawei/mdm/sample/SampleEula.java" target-dir="src/cordova.plugin.huaweiswitchapn" />
		<source-file src="src/android/com/huawei/mdm/sample/SampleMainActivity.java" target-dir="src/cordova.plugin.huaweiswitchapn" />
		<source-file src="src/android/com/huawei/mdm/sample/Utils.java" target-dir="src/cordova.plugin.huaweiswitchapn" />
		<source-file src="src/android/com/huawei/mdm/sample/SharedPreferenceUtil.java" target-dir="src/cordova.plugin.huaweiswitchapn" />
		<source-file src="src/android/com/huawei/mdm/sample/huawei_permission_statement.html" target-dir="src/cordova.plugin.huaweiswitchapn" />
		<source-file src="src/android/com/huawei/mdm/sample/huawei_software_license.html" target-dir="src/cordova.plugin.huaweiswitchapn" />
		<lib-file src="src/android/lib/hwMdm.jar"/>
	</platform>
</plugin>
